<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srv_twry.bussinesscard.MainActivity"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="167dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/tv_address"
        android:textColor="@android:color/white"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toLeftOf="@+id/view"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_name" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="303dp"
        android:layout_height="177dp"
        app:srcCompat="@drawable/ic_phone_android_black_24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="75dp"
        android:background="@android:color/white"
        android:visibility="visible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/view"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="-59dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_working_hours" />

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="259dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="22dp"
        android:text="@string/tv_name_Store"
        android:textColor="@android:color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo"
        tools:layout_editor_absoluteX="60dp" />

    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="177dp"
        android:layout_height="67dp"
        android:text="@string/tv_mobile_number"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteX="199dp"
        app:layout_constraintVertical_bias="0.476" />

    <TextView
        android:id="@+id/tv_working_hours"
        android:layout_width="342dp"
        android:layout_height="59dp"
        android:text="@string/tv_working_hours"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        tools:layout_editor_absoluteX="21dp" />

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="341dp"
        android:layout_height="44dp"
        android:text="NOTE: SUNDAY CLOSED"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_working_hours"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
